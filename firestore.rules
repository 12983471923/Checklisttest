rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to checklist documents
    // Basic security: require authentication in the future
    match /checklists/{document} {
      allow read, write: if true; // TODO: Add proper authentication
    }
    
    // Allow read and write access to downtime documents  
    match /downtime/{document} {
      allow read, write: if true; // TODO: Add proper authentication
    }
    
    // Allow read and write access to handover notes
    match /handoverNotes/{document} {
      allow read, write: if true; // TODO: Add proper authentication
    }
    
    // Allow read and write access to wake-up calls
    match /wakeUpCalls/{document} {
      allow read, write: if true; // TODO: Add proper authentication
    }
    
    // Allow read and write access to breakfast times
    match /breakfastTimes/{document} {
      allow read, write: if true; // TODO: Add proper authentication
    }
    
    // Block access to any other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
